<h3 class="text-center" style="margin-bottom: 20px; "> La Liste des Blocs</h3>
<table class="table table-striped text-center">
    <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th>Libelle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.libelle}}</td>
            <td >
                <a class="btn btn-outline-dark btn-sm" href="/bloc/{{this._id}}"><i class="fa fa-pencil fa-lg btn-outline-dark" aria-hidden="true"></i></a>
                <a class="btn btn-outline-dark btn-sm" href="/bloc/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg btn-outline-dark" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<h3><a class="btn btn-outline-dark align-center btn-block" href="/bloc"><i class="fa fa-plus"></i> Ajouter un Bloc</a></h3>

